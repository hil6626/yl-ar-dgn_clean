{
  "info": {
    "_postman_id": "yl-monitor-api-collection",
    "name": "YL-Monitor API Collection",
    "description": "YL-Monitor 系统 API 测试集合 - 与 VS Code MCP Server 联动",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "系统健康检查",
      "item": [
        {
          "name": "健康检查 (v1)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/dashboard/health",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "dashboard", "health"]
            },
            "description": "检查 YL-Monitor 服务健康状态 (v1 API)"
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response has status field\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('status');",
                  "});",
                  "",
                  "pm.test(\"Service is healthy\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.status).to.eql('ok');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "系统摘要 (v1)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/dashboard/summary",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "dashboard", "summary"]
            },
            "description": "获取系统健康摘要 - CPU、内存、磁盘使用率"
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response has required fields\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('status');",
                  "    pm.expect(jsonData).to.have.property('cpu_usage');",
                  "    pm.expect(jsonData).to.have.property('memory_usage');",
                  "    pm.expect(jsonData).to.have.property('disk_usage');",
                  "    pm.expect(jsonData).to.have.property('services');",
                  "});",
                  "",
                  "pm.test(\"CPU usage is valid\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.cpu_usage).to.be.a('number');",
                  "    pm.expect(jsonData.cpu_usage).to.be.at.least(0);",
                  "    pm.expect(jsonData.cpu_usage).to.be.at.most(100);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
