# YL-AR-DGN Staging Environment Configuration
# 预发布环境配置

# 镜像标签
IMAGE_TAG=staging-${GITHUB_SHA:-latest}
COMPOSE_PROJECT_NAME=yl-ar-dgn-staging

# 数据库配置
DB_NAME=ar_dgn_staging
DB_USER=staging_user
DB_PASSWORD=${STAGING_DB_PASSWORD}
DATABASE_URL=postgresql://staging_user:${STAGING_DB_PASSWORD}@postgres:5432/ar_dgn_staging

# Redis配置
REDIS_URL=redis://redis:6379/0

# API配置
API_URL=http://ar-backend:8000

# Grafana配置
GRAFANA_USER=staging_admin
GRAFANA_PASSWORD=${STAGING_GRAFANA_PASSWORD}

# Docker Registry
DOCKER_REGISTRY=docker.io

# 监控配置
PROMETHEUS_RETENTION=200h
GRAFANA_RETENTION=7d

# 性能配置
MAX_WORKERS=10
CACHE_SIZE=10000

# 日志级别
LOG_LEVEL=INFO

# 健康检查超时
HEALTHCHECK_TIMEOUT=10s
HEALTHCHECK_RETRIES=3

